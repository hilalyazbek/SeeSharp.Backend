{
  "ConnectionStrings": {
    //"DefaultConnection": "Server=localhost,1433;Database=SeeSharpBlog;User ID=sa;Password=P@ssw0rd;TrustServerCertificate=True",
    "DefaultConnection": "Server=localhost,1433;Database=SeeSharpBlog_Auth;User ID=sa;Password=P@ssw0rd;TrustServerCertificate=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtOptions": {
    "Secret": "C#-SeeSharp-JwtKey",
    "Issuer": "C#-SeeSharp",
    "Audience": "https://localhost:4200",
    "expiryInMinutes": 60
  },
  "GoogleAuthOptions": {
    "ClientId": "[From https://console.cloud.google.com/]",
    "ClientSecret": "[From https://console.cloud.google.com/]"
  },
  "AllowedHosts": "*"
}
